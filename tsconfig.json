{
   "compilerOptions": {
      "target": "es2015",
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "lib": [
         "es6",
         "es2017",
         "es2019",
         "dom"
      ],
      "strict": true,
      "esModuleInterop": false,
      "outDir": "dist",
      "rootDir": "./",
      "emitDecoratorMetadata": true,
      "emitDeclarationOnly": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true
   },
   "exclude": [
      "node_modules"
   ],
   "paths": {
      "@/*": [
         "./src/*"
      ]
   },
   "include": [
      "./src/**/*.ts"
   ]
}